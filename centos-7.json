{
  "builders":
  [
    {
      "type": "qemu",
      "accelerator": "kvm",
      "headless": false,
      "vm_name": "packer-centos-7",

      "output_directory": "packer-centos-7",

      "iso_url": "http://repo/os/CentOS/7/isos/x86_64/CentOS-7-x86_64-Minimal-1611.iso",
      "iso_checksum": "27bd866242ee058b7a5754e83d8ee8403e216b93d130d800852a96f41c34d86a",
      "iso_checksum_type": "sha256",

      "http_directory": "httpdir",
      "http_port_min": 10082,
      "http_port_max": 10089,

      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "s0m3password",
      "ssh_port": 22,
      "ssh_wait_timeout": "10m",

      "net_device": "virtio-net",

      "disk_interface": "virtio",
      "disk_size": 6000,
      "format": "qcow2",

      "qemuargs": [
        [ "-m","1G" ]
      ],

      "boot_wait": "5s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7-ks.cfg<enter><wait>"
      ],
      "shutdown_command": "shutdown -P now"

    }
  ],

  "provisioners": [
    {
      "type": "chef-solo",
      "install_command": "yum -y install http://repo/software/Chef/chef-12.0.1-1.x86_64.rpm",
      "cookbook_paths": ["cookbooks"],
      "run_list": ["chef-base"]
    }
  ],

  "post-processors": [
    {
      "output": "centos-7.box",
      "type": "vagrant"
    }
  ]

}
